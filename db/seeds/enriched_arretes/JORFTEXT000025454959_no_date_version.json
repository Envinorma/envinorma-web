            "outer_alineas": [
                {
                    "active": true,
                    "table": null,
                    "text": "Les négociants tiennent à jour un registre chronologique des déchets détenus."
                },
                {
                    "active": true,
                    "table": null,
                    "text": "Ce registre contient au moins, pour chaque flux de déchets détenus, les informations suivantes :"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― la date d'acquisition et de cession du déchet ;"
                },
                {
                    "active": true,
                    "links": [
                        {
                            "content_size": 19,
                            "position": 99,
                            "target": "https://www.legifrance.gouv.fr/affichCodeArticle.do?cidTexte=LEGITEXT000006074220&idArticle=LEGIARTI000006839995&dateTexte=&categorieLien=cid"
                        }
                    ],
                    "table": null,
                    "text": "― la nature du déchet détenu (code du déchet au regard de la nomenclature définie à l'annexe II de l'article R. 541-8 du code de l'environnement) ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― la quantité du déchet détenu ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le nom et l'adresse du producteur du déchet ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le nom et l'adresse de la personne auprès de laquelle le déchet a été acquis ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le cas échéant, le nom et l'adresse des installations où les déchets ont été préalablement triés, entreposés, regroupés ou traités depuis leur production ;"
                },
                {
                    "active": true,
                    "links": [
                        {
                            "content_size": 20,
                            "position": 127,
                            "target": "https://www.legifrance.gouv.fr/affichCodeArticle.do?cidTexte=LEGITEXT000006074220&idArticle=LEGIARTI000006839128&dateTexte=&categorieLien=cid"
                        }
                    ],
                    "table": null,
                    "text": "― le nom et l'adresse du ou des transporteurs qui prennent en charge le déchet, ainsi que leur numéro de récépissé mentionné à l'article R. 541-53 du code de l'environnement ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le cas échéant, le numéro du ou des bordereaux de suivi de déchets ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le cas échéant,            le numéro de notification prévu par le règlement susvisé  ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le nom et l'adresse de l'installation vers laquelle le déchet est expédié ;"
                },
                {
                    "active": true,
                    "table": null,
                    "text": "― le code du traitement qui va être opéré dans l'installation réceptrice selon les annexes I et II de la directive susvisée ;"
                },
                {
                    "active": true,
                    "links": [
                        {
                            "content_size": 18,
                            "position": 100,
                            "target": "https://www.legifrance.gouv.fr/affichCodeArticle.do?cidTexte=LEGITEXT000006074220&idArticle=LEGIARTI000006834443&dateTexte=&categorieLien=cid"
                        }
                    ],
                    "table": null,
                    "text": "― la qualification du traitement final vis-à-vis de la hiérarchie des modes de traitement définie à l'article L. 541-1 du code de l'environnement."
                }
            ],
