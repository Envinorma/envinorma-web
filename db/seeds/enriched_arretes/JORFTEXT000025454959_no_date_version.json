                "warnings": []
            },
            "id": "a407db754B15",
            "outer_alineas": [
                {
                    "active": true,
                    "table": null,
                    "text": "Les registres visés au présent arrêté sont conservés pendant au moins trois ans et sont tenus à la disposition des autorités compétentes."
                }
            ],
            "reference_str": "Art. 7",
            "sections": [],
            "title": {
                "active": true,
                "table": null,
                "text": "Article 7"
            }
        },
        {
            "annotations": {
                "topic": "DECHETS"
            },
            "applicability": {
                "active": true,
                "modified": false,
                "previous_version": null,
                "warnings": []
            },
            "id": "e67fec8A130d",
            "outer_alineas": [
                {
                    "active": true,
                    "table": null,
                    "text": "Les dispositions du présent arrêté s'appliquent sans préjudice des dispositions spéciales définies notamment pour certains types d'installations ou de personnes ou certains flux de déchets spécifiques."
                }
            ],
            "reference_str": "Art. 8",
            "sections": [],
            "title": {
                "active": true,
                "table": null,
                "text": "Article 8"
            }
        },
        {
