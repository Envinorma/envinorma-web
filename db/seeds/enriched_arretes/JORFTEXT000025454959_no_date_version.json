                "warnings": []
            },
            "id": "f0B84139E45F",
            "outer_alineas": [
                {
                    "active": true,
                    "table": null,
                    "text": "Les registres spécifiés aux articles 1er, 2, 3, 4 et 5 du présent arrêté peuvent être contenus dans un document papier ou informatique."
                }
            ],
            "reference_str": "Art. 9",
            "sections": [],
            "title": {
                "active": true,
                "table": null,
                "text": "Article 9"
            }
        },
        {
